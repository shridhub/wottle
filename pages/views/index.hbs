<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- Bootstrap CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>

<body>

    <div class="row m-5 sticky-top p-3" style="background: #064635; z-index: 1; border-radius: 10px;">
        <div class="col-lg-10" style="color:cadetblue"><p class="h1">Water Bottle Shopping</p></div>
        <div class="col-lg-2 p-3 "><span style="color: white;">Cost: </span><p class="total mt-5 mx-5 p-2">0</p></div>
    </div>
    <div class="row m-4 mt-0 pt-0 p-5 d-flex justify-content-around">
        {{#each data}}
        <div class="col-lg-3 col-md-4 col-sm-12 my-5">
            <div class="card self-card p-3" style="border-radius:10px;">
                <img src='{{this.photo}}' class="card-img-top img-fluid" alt="..." style="border-radius: 20px;">
                <div class="card-body">
                    <div class="d-flex justify-content-between m-0">
                        <p class="h3" style="display: inline;"><b>{{this.brand}}</b></p>
                        <p class="h4 cost" style="display: inline;color: #B4FE98; text-shadow: 0 0 10px green;">{{this.cost}}₹</p>
                    </div>
                    <p class="card-text" style="display: inline;">{{this.size}}</p>
                </div>
                <div class="calc row m-2">
                    <div class="add m-1 p-1 text-center col-lg-1" onmousedown="return false">+</div>
                    <div class="m-1 p-1 col-lg-1 value text-center" onmousedown="return false">0</div>
                    <div class="subtract m-1 p-1 text-center col-lg-1" onmousedown="return false">-</div>
                </div>
            </div>
        </div>
        - {{/each}}
    </div>


    <script>
        const adds = document.getElementsByClassName('add')
        const values = document.getElementsByClassName('value')
        const subtracts = document.getElementsByClassName('subtract')
        const costs = document.getElementsByClassName('cost')
        const total = document.getElementsByClassName('total')[0]

        let tot = 0

        // Change values of bottle in each card
        for (let i = 0; i < adds.length; i++) {
            adds[i].addEventListener('click', () => {
                let num = values[i].innerHTML
                num = parseInt(num)
                values[i].innerHTML = num + 1

                let cost = parseInt(costs[i].innerHTML.replace('₹', ''))
                tot += cost
                total.innerHTML = tot
            })
            subtracts[i].addEventListener('click', () => {
                let num = values[i].innerHTML
                num = parseInt(num)
                if (num > 0) {
                    values[i].innerHTML = num - 1
                    let cost = parseInt(costs[i].innerHTML.replace('₹', ''))
                    tot -= cost
                    total.innerHTML = tot
                }
            })
        }



    </script>
</body>

</html>